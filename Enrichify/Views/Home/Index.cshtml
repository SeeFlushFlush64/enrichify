@{
    ViewData["Title"] = "Enrichify";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-3 fw-bold mb-3">Enrichify</h1>
            <p class="lead text-muted mb-5">Enrich your leads with verified email addresses</p>

            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <form asp-action="UploadCsv" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="file" class="form-label fs-5">Upload your CSV file</label>
                            <input type="file"
                                   name="file"
                                   id="file"
                                   accept=".csv"
                                   class="form-control form-control-lg"
                                   required />
                            <div class="form-text mt-2">
                                CSV should contain: Name, Company, Email columns
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-upload me-2"></i>Upload & Enrich
                        </button>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-muted">
                <small>Powered by Hunter.io API</small>
            </div>
        </div>
    </div>
</div>